<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add TextViews to display the results -->
    <TextView
        android:id="@+id/awakeningToSleepingDifferenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time difference between sleeping and scheduled awakening: " />

    <TextView
        android:id="@+id/sleepingToGetUpDifferenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time difference between sleeping and getting up: " />

    <TextView
        android:id="@+id/awakeningToGetUpDifferenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time difference between scheduled awakening and getting up: " />

    <!-- Add TextView to display the fraction of the difference -->
    <TextView
        android:id="@+id/fractionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fraction of the difference: " />

</LinearLayout>
